[bar/top]
modules-right = wireless-network date battery
module-margin = 2
font-0 = hack:size=14

[global/wm]
margin-top = 10


; ~~~ DATE AND TIME ~~~
[module/date]
type = internal/date

interval = 1.0

date = %Y-%m-%d %H:%M:%S
date-alt = %A, %d %B %Y

; ~~~ BATTERY ~~~
[module/battery]
format-discharging = <label-discharging>
label-discharging = Discharging %percentage%%

format-charging = <label-charging>
label-charging = Charging %percentage%%

type = internal/battery


full-at = 98

battery = BAT0
adapter = ADP1

poll-interval = 5

; ~~~ NETWORK ~~~
[module/wireless-network]
type = internal/network
interface = wlp0s20f3
