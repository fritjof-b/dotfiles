# My aliases for bash

## System utils
# ls
alias ls='ls -A --color=auto'
alias ll='ls -Al --color=auto'

# cd
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# mkdir
alias md='mkdir -pv'

# remove, copy and move
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -Iv'

# git
alias gc='git commit -m'
alias gca='git commit -am'
alias gps='git push'
alias gpl='git pull'
alias gft='git fetch'
alias gch='git checkout'


