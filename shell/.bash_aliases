
# ls aliases
alias ls='ls -A --color=auto'
alias ll='ls -Al --color=auto'

# cd aliases
alias ..='cd ..'
alias ...='cd ../..'

# mkdir
alias md='mkdir -p'

# git aliases
alias gc='git commit -m'
alias gca='git commit -am'
alias gp='git push'
alias gch='git checkout'
alias gss='git status'

# Remove, copy and move verbose
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -Iv'


