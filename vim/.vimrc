" my vimrc file

" no vi, only vim
set nocompatible

" syntax
set matchpairs+=<:>
set hlsearch
set incsearch
set relativenumber
set tabstop=4

" wrap text
set wrap

" correct backspace
set backspace=indent,eol,start

" fast scroll
set ttyfast

" Display options
set showmode
set showcmd

" for plugins
filetype off

syntax on
